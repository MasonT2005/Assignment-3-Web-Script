<% include ../Partials/header.ejs%>
<% include ../Partials/main_nav.ejs%>

<!-- Content for Edit Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name of Assignment</label>
                    <input type="text" class="form-control" id="nameTextField"
                    placeholder="Enter Your Name" name="Name" value='<%= Incident.Name %>' required>
                </div>
                <div class="form-group">
                    <label for="timeTextField">Due Date</label>
                    <input type="text" class="form-control" id="timeTextField"
                    placeholder="Enter Incident Time" name="Time" value='<%= Incident.Time %>' required>
                </div>
               
              
                <button class="btn btn-primary" type="submit">Enter Data<i class="fas fa-edit"></i></button>
                <button class="btn btn-warning" onclick="window.history.back()">Undo <i class="fas fa-undo"></i></button>
            </form>
        </div>
    </div>
</div>

